{
    "compilerOptions": {
        "target": "es5",
        "outDir": "lib",
        "lib": ["es7", "dom"],
        "sourceMap": true,
        "inlineSources": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitOnError": true, 
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
    },

    "include": [
        "src/**/*"
    ]
}